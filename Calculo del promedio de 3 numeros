#include "stdafx.h"// Microsoft Visual Basic
#include <iostream>//cin, cout
#include "conio.h"
using namespace std;
void main()
{float promedio;
 int a,b,c;
 cout<<"Ingrese el primer valor: ";
 cin>>a;
 cout<<"Ingrese el segundo valor: ";
 cin>>b;
 cout<<"Ingrese el tercer valor: ";
 cin>>c;
 promedio=((a+b+c)/3.0);
 cout<<"El promedio de los 3 numeros es: "<<promedio<<endl;
 getch();
}
